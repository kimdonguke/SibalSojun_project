<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/todaylist_foodimg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기모링"
        android:textColor="#111"
        app:layout_constraintTop_toTopOf="@+id/todaylist_foodimg"
        app:layout_constraintLeft_toRightOf="@+id/todaylist_foodimg"
        android:textSize="25sp"
        android:layout_marginLeft="9dp"
        android:id="@+id/todaylist_foodname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/todaylist_foodname"
        app:layout_constraintBottom_toBottomOf="@+id/todaylist_foodimg"
        app:layout_constraintLeft_toLeftOf="@+id/todaylist_foodname"
        android:text="300kcal"
        android:id="@+id/todaylist_foodkalori"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/todaylist_foodimg"
        app:layout_constraintBottom_toBottomOf="@id/todaylist_foodimg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:textSize="30sp"
        android:text="*3"
        android:id="@+id/todaylist_foodhowmuch"
        />


</android.support.constraint.ConstraintLayout>